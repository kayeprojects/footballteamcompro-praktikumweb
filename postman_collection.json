{
    "info": {
        "name": "FC Barcelona API - JWT Auth & Tickets",
        "description": "API collection for FC Barcelona website with JWT authentication and ticket management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/register",
                            "host": ["{{base_url}}"],
                            "path": ["register"]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('token', jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/login",
                            "host": ["{{base_url}}"],
                            "path": ["login"]
                        }
                    }
                },
                {
                    "name": "Get Current User (Me)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/me",
                            "host": ["{{base_url}}"],
                            "path": ["me"]
                        }
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/refresh",
                            "host": ["{{base_url}}"],
                            "path": ["refresh"]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/logout",
                            "host": ["{{base_url}}"],
                            "path": ["logout"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Tickets",
            "item": [
                {
                    "name": "Get My Tickets",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/tickets?upcoming=true",
                            "host": ["{{base_url}}"],
                            "path": ["tickets"],
                            "query": [
                                {
                                    "key": "upcoming",
                                    "value": "true"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Ticket (Purchase)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"match_title\": \"FC Barcelona vs Real Madrid\",\n    \"match_date\": \"2025-01-15T20:00:00Z\",\n    \"category\": \"premium\",\n    \"price\": 1500000,\n    \"seat_number\": \"A15-22\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/tickets",
                            "host": ["{{base_url}}"],
                            "path": ["tickets"]
                        }
                    }
                },
                {
                    "name": "Get Ticket Detail",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/tickets/1",
                            "host": ["{{base_url}}"],
                            "path": ["tickets", "1"]
                        }
                    }
                },
                {
                    "name": "Update Ticket",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"category\": \"vip\",\n    \"price\": 2500000\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/tickets/1",
                            "host": ["{{base_url}}"],
                            "path": ["tickets", "1"]
                        }
                    }
                },
                {
                    "name": "Confirm Ticket",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/tickets/1/confirm",
                            "host": ["{{base_url}}"],
                            "path": ["tickets", "1", "confirm"]
                        }
                    }
                },
                {
                    "name": "Cancel Ticket",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/tickets/1",
                            "host": ["{{base_url}}"],
                            "path": ["tickets", "1"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Football Data API",
            "item": [
                {
                    "name": "Get Team (Barcelona)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/teams/81",
                            "host": ["{{base_url}}"],
                            "path": ["football", "teams", "81"]
                        }
                    }
                },
                {
                    "name": "Get Team Players (Barcelona)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/teams/81/players",
                            "host": ["{{base_url}}"],
                            "path": ["football", "teams", "81", "players"]
                        }
                    }
                },
                {
                    "name": "Get Team Matches (Barcelona)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/teams/81/matches?status=SCHEDULED&limit=5",
                            "host": ["{{base_url}}"],
                            "path": ["football", "teams", "81", "matches"],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "SCHEDULED"
                                },
                                {
                                    "key": "limit",
                                    "value": "5"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Player Detail",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/players/1",
                            "host": ["{{base_url}}"],
                            "path": ["football", "players", "1"]
                        }
                    }
                },
                {
                    "name": "Get Competitions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/competitions",
                            "host": ["{{base_url}}"],
                            "path": ["football", "competitions"]
                        }
                    }
                },
                {
                    "name": "Get La Liga Standings",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/competitions/PD/standings",
                            "host": ["{{base_url}}"],
                            "path": ["football", "competitions", "PD", "standings"]
                        }
                    }
                },
                {
                    "name": "Get La Liga Scorers",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/football/competitions/PD/scorers",
                            "host": ["{{base_url}}"],
                            "path": ["football", "competitions", "PD", "scorers"]
                        }
                    }
                }
            ]
        }
    ]
}
