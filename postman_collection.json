{
	"info": {
		"_postman_id": "fc-barcelona-api",
		"name": "FC Barcelona API",
		"description": "Complete API collection for FC Barcelona Fan Website.\n\nIncludes:\n- JWT Authentication\n- Match Management (UUID-based)\n- Ticket Management (UUID-based)\n- Football Data Proxy\n- News Feed",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api"
		},
		{
			"key": "token",
			"value": ""
		},
		{
			"key": "match_uuid",
			"value": ""
		},
		{
			"key": "ticket_uuid",
			"value": ""
		}
	],
	"item": [
		{
			"name": "Authentication",
			"description": "JWT-based authentication endpoints",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/register",
							"host": ["{{base_url}}"],
							"path": ["register"]
						},
						"description": "Register a new user account. Returns JWT token on success."
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"    console.log('Token saved to collection variables');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": ["{{base_url}}"],
							"path": ["login"]
						},
						"description": "Login with email and password. Returns JWT token."
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/me",
							"host": ["{{base_url}}"],
							"path": ["me"]
						},
						"description": "Get the currently authenticated user's profile."
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set('token', jsonData.data.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/refresh",
							"host": ["{{base_url}}"],
							"path": ["refresh"]
						},
						"description": "Refresh the JWT token before it expires."
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/logout",
							"host": ["{{base_url}}"],
							"path": ["logout"]
						},
						"description": "Invalidate the current JWT token."
					},
					"response": []
				}
			]
		},
		{
			"name": "Matches (UUID-based)",
			"description": "Match management endpoints using UUID identifiers",
			"item": [
				{
					"name": "List All Matches",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.data && jsonData.data.data.length > 0) {",
									"    pm.collectionVariables.set('match_uuid', jsonData.data.data[0].uuid);",
									"    console.log('Match UUID saved: ' + jsonData.data.data[0].uuid);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/matches?upcoming=true&available=true&limit=10",
							"host": ["{{base_url}}"],
							"path": ["matches"],
							"query": [
								{
									"key": "upcoming",
									"value": "true",
									"description": "Only upcoming matches"
								},
								{
									"key": "available",
									"value": "true",
									"description": "Only matches with available seats"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get a list of all matches. Public endpoint."
					},
					"response": []
				},
				{
					"name": "Get Match by UUID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/matches/{{match_uuid}}",
							"host": ["{{base_url}}"],
							"path": ["matches", "{{match_uuid}}"]
						},
						"description": "Get details of a specific match by UUID. Public endpoint."
					},
					"response": []
				},
				{
					"name": "Create Match",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.uuid) {",
									"    pm.collectionVariables.set('match_uuid', jsonData.data.uuid);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"FC Barcelona vs Manchester City\",\n    \"match_date\": \"2025-02-15T21:00:00\",\n    \"venue\": \"Camp Nou\",\n    \"competition\": \"UEFA Champions League\",\n    \"home_team\": \"FC Barcelona\",\n    \"away_team\": \"Manchester City\",\n    \"home_team_logo\": \"https://crests.football-data.org/81.png\",\n    \"away_team_logo\": \"https://crests.football-data.org/65.png\",\n    \"total_seats\": 100\n}"
						},
						"url": {
							"raw": "{{base_url}}/matches",
							"host": ["{{base_url}}"],
							"path": ["matches"]
						},
						"description": "Create a new match. Requires authentication."
					},
					"response": []
				},
				{
					"name": "Update Match",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"venue\": \"Spotify Camp Nou\",\n    \"total_seats\": 150\n}"
						},
						"url": {
							"raw": "{{base_url}}/matches/{{match_uuid}}",
							"host": ["{{base_url}}"],
							"path": ["matches", "{{match_uuid}}"]
						},
						"description": "Update an existing match. Requires authentication."
					},
					"response": []
				},
				{
					"name": "Delete Match",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/matches/{{match_uuid}}",
							"host": ["{{base_url}}"],
							"path": ["matches", "{{match_uuid}}"]
						},
						"description": "Delete a match. Cannot delete if match has active tickets."
					},
					"response": []
				},
				{
					"name": "Get Match Tickets",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/matches/{{match_uuid}}/tickets",
							"host": ["{{base_url}}"],
							"path": ["matches", "{{match_uuid}}", "tickets"]
						},
						"description": "Get all tickets for a specific match."
					},
					"response": []
				}
			]
		},
		{
			"name": "Tickets (UUID-based)",
			"description": "Ticket management with UUID identifiers. All endpoints require authentication.",
			"item": [
				{
					"name": "List My Tickets",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tickets?upcoming=true",
							"host": ["{{base_url}}"],
							"path": ["tickets"],
							"query": [
								{
									"key": "status",
									"value": "active",
									"disabled": true
								},
								{
									"key": "upcoming",
									"value": "true"
								}
							]
						},
						"description": "Get all tickets for the authenticated user."
					},
					"response": []
				},
				{
					"name": "Purchase Ticket",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.uuid) {",
									"    pm.collectionVariables.set('ticket_uuid', jsonData.data.uuid);",
									"    console.log('Ticket UUID saved: ' + jsonData.data.uuid);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"match_uuid\": \"{{match_uuid}}\",\n    \"category\": \"premium\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/tickets",
							"host": ["{{base_url}}"],
							"path": ["tickets"]
						},
						"description": "Purchase a ticket for a match. Match available_seats will be decremented."
					},
					"response": []
				},
				{
					"name": "Get Ticket by UUID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tickets/{{ticket_uuid}}",
							"host": ["{{base_url}}"],
							"path": ["tickets", "{{ticket_uuid}}"]
						},
						"description": "Get details of a specific ticket by UUID."
					},
					"response": []
				},
				{
					"name": "Update Ticket",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"category\": \"vip\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/tickets/{{ticket_uuid}}",
							"host": ["{{base_url}}"],
							"path": ["tickets", "{{ticket_uuid}}"]
						},
						"description": "Update a pending ticket. Only pending tickets can be updated."
					},
					"response": []
				},
				{
					"name": "Confirm Ticket",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tickets/{{ticket_uuid}}/confirm",
							"host": ["{{base_url}}"],
							"path": ["tickets", "{{ticket_uuid}}", "confirm"]
						},
						"description": "Confirm a pending ticket. Changes status from 'pending' to 'active'."
					},
					"response": []
				},
				{
					"name": "Cancel Ticket",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/tickets/{{ticket_uuid}}",
							"host": ["{{base_url}}"],
							"path": ["tickets", "{{ticket_uuid}}"]
						},
						"description": "Cancel a ticket. Match available_seats will be incremented. Only pending or active tickets can be cancelled."
					},
					"response": []
				}
			]
		},
		{
			"name": "Football API Proxy",
			"description": "Proxy endpoints to football-data.org API",
			"item": [
				{
					"name": "Get Team Info",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/football/teams/81",
							"host": ["{{base_url}}"],
							"path": ["football", "teams", "81"]
						},
						"description": "Get FC Barcelona team info (ID: 81)"
					},
					"response": []
				},
				{
					"name": "Get Team Players",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/football/teams/81/players",
							"host": ["{{base_url}}"],
							"path": ["football", "teams", "81", "players"]
						},
						"description": "Get FC Barcelona squad"
					},
					"response": []
				},
				{
					"name": "Get Team Matches",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/football/teams/81/matches?status=SCHEDULED",
							"host": ["{{base_url}}"],
							"path": ["football", "teams", "81", "matches"],
							"query": [
								{
									"key": "status",
									"value": "SCHEDULED"
								}
							]
						},
						"description": "Get FC Barcelona scheduled matches"
					},
					"response": []
				},
				{
					"name": "Get News Feed",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/news",
							"host": ["{{base_url}}"],
							"path": ["news"]
						},
						"description": "Get FC Barcelona news from RSS feed"
					},
					"response": []
				}
			]
		}
	]
}
